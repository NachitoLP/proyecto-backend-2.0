<div>
    <h3 class="new_product_title">Ingrese los datos del producto a agregar</h3>
    <form class="form_new_product">
        <label>Nombre</label>
        <input name="name" required id="name">
        <label>Descripción</label>
        <input name="description" required id="description">
        <label>Precio (Solo el número)</label>
        <input name="price" type="number" required id="price">
        <label>Link de la imagen (opcional)</label>
        <input name="href" type="text">
        <label>Inserte la imagen</label>
        <input name="file" type="file">
        <label>Código</label>
        <input name="code" required id="code">
        <label>Stock disponible</label>
        <input name="stock" type="number" required id="stock">
        <input type="submit" id="new_product_submit">
    </form>
</div>
<div class="div_padre_products" id="div_products_added">
    {{#each productsArray}}
        <div class="div_product">
            <div>
                <br>
                <h3>{{this.name}}</h3>
                <p><b>Description:</b> {{this.description}}</p>
                <p><b>Price:</b> ${{this.price}}</p>
                <p><b>Code:</b> {{this.code}}</p>
                <p><b>Stock:</b> {{this.stock}}</p>
            </div>
        </div>
    {{/each}}
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>

